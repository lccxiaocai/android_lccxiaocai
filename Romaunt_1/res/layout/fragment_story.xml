<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green">
        
        <ImageView android:id="@+id/cloud_imageview_story"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="12dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/img_cloud"
            />
        
        <TextView 
             android:layout_centerHorizontal="true"
             android:layout_marginTop="11dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/story"
             android:textSize="26.5sp"
             android:textColor="#FFFFFF"/>
        
        <ImageView android:id="@+id/add_imageview_story"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/img_add"/>
    </RelativeLayout>
        
      <com.xiaocai_.romaunt_1.ListViewCompat
        android:id="@+id/list_story"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@color/gray_normal"
        android:dividerHeight="0.5dp"
        android:drawSelectorOnTop="false"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none">
        </com.xiaocai_.romaunt_1.ListViewCompat>
  
</LinearLayout>
